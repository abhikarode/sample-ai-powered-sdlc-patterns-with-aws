{
  "family": "fake-api-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "fake-api",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/fake-api-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "RESPONSE_DELAY_MIN",
          "value": "0.1"
        },
        {
          "name": "RESPONSE_DELAY_MAX",
          "value": "0.8"
        },
        {
          "name": "ERROR_RATE",
          "value": "0.03"
        },
        {
          "name": "MEMORY_LEAK_SIMULATION",
          "value": "false"
        },
        {
          "name": "DEBUG",
          "value": "false"
        },
        {
          "name": "PORT",
          "value": "8080"
        },
        {
          "name": "HOST",
          "value": "0.0.0.0"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fake-api-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
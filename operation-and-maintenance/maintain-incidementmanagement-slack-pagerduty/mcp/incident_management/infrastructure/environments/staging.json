{
  "environment": "staging",
  "region": "us-east-1",
  "account_id": "${AWS_ACCOUNT_ID}",
  "tags": {
    "Environment": "staging",
    "Project": "IncidentManagement",
    "Owner": "DevOps",
    "CostCenter": "Engineering"
  },
  "dynamodb": {
    "billing_mode": "PAY_PER_REQUEST",
    "point_in_time_recovery": true,
    "deletion_protection": true
  },
  "lambda": {
    "memory_size": 1024,
    "timeout_minutes": 10,
    "reserved_concurrency": 100,
    "tracing": "Active"
  },
  "api_gateway": {
    "throttling": {
      "rate_limit": 2000,
      "burst_limit": 4000
    },
    "logging": {
      "level": "INFO",
      "data_trace": true,
      "metrics": true
    }
  },
  "monitoring": {
    "log_retention_days": 90,
    "health_check_interval_minutes": 2,
    "alarm_evaluation_periods": 2
  },
  "deployment": {
    "deployment_config": "CANARY_10_PERCENT_10_MINUTES",
    "auto_rollback": true,
    "artifact_retention_days": 90
  },
  "security": {
    "encryption_at_rest": true,
    "encryption_in_transit": true,
    "api_key_required": true
  }
}
{
  "environment": "prod",
  "region": "us-east-1",
  "account_id": "${AWS_ACCOUNT_ID}",
  "tags": {
    "Environment": "prod",
    "Project": "IncidentManagement",
    "Owner": "DevOps",
    "CostCenter": "Engineering"
  },
  "dynamodb": {
    "billing_mode": "PAY_PER_REQUEST",
    "point_in_time_recovery": true,
    "deletion_protection": true,
    "backup_enabled": true
  },
  "lambda": {
    "memory_size": 1024,
    "timeout_minutes": 15,
    "reserved_concurrency": 500,
    "tracing": "Active"
  },
  "api_gateway": {
    "throttling": {
      "rate_limit": 5000,
      "burst_limit": 10000
    },
    "logging": {
      "level": "ERROR",
      "data_trace": false,
      "metrics": true
    }
  },
  "monitoring": {
    "log_retention_days": 365,
    "health_check_interval_minutes": 1,
    "alarm_evaluation_periods": 1
  },
  "deployment": {
    "deployment_config": "LINEAR_10_PERCENT_EVERY_1_MINUTE",
    "auto_rollback": true,
    "artifact_retention_days": 365,
    "approval_required": true
  },
  "security": {
    "encryption_at_rest": true,
    "encryption_in_transit": true,
    "api_key_required": true,
    "waf_enabled": true
  }
}
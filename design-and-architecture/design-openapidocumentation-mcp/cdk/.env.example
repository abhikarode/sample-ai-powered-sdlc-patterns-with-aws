# CDK Environment Variables
# Copy this file to .env and customize the values for your deployment

# AWS Account and Region Configuration
CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=us-east-1

# OpenSearch Configuration
OPENSEARCH_COLLECTION_NAME=openapi-kb
OPENSEARCH_INDEX_NAME=openapi-index

# IAM Configuration (optional - defaults to account root if not specified)
CDK_IAM_USER_ARN=arn:aws:iam::123456789012:user/your-username

# Bedrock Configuration
BEDROCK_REGION=eu-west-1
BEDROCK_FOUNDATION_MODEL=eu.anthropic.claude-3-7-sonnet-20250219-v1:0
BEDROCK_EMBEDDING_MODEL_ARN=arn:aws:bedrock:us-east-1::foundation-model/amazon.titan-embed-text-v2:0
BEDROCK_AGENT_ALIAS_ID=TSTALIASID

# MCP Server Configuration
NODE_ENV=production
PORT=3000
MCP_PORT=3001
MODEL_ID=eu.anthropic.claude-3-7-sonnet-20250219-v1:0
MCP_SERVER_NAME=openapi-documentation-mcp-prod
MCP_SERVER_VERSION=1.0.0
LOG_LEVEL=info
HEALTH_CHECK_ENABLED=true
ENABLE_REQUEST_LOGGING=true

# CDK Context Parameters (passed via --context flag)
# certificateArn=arn:aws:acm:us-east-1:123456789012:certificate/your-cert-id
# domainName=your-domain.com
# allowedIps=1.2.3.4/32,5.6.7.8/32